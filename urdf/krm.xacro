<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="krm">

<xacro:include filename="$(find krm_description)/urdf/materials.xacro"/>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1.0 1.0 1.0"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1.0 1.0 1.0"/>
            </geometry>
            
        </collision>
    </link>


     <link name="link_01">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.35" length="0.4"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.35" length="0.4"/>
            </geometry>
            
        </collision>
    </link>
    <joint name="base_link01_joint" type="revolute">
        <origin xyz="0.0 0.0 0.50" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="link_01"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-3.14" upper="3.14" effort="1000.0" velocity="0.5"/>
    </joint>
</robot>