<?xml version="1.0"?>
<robot>

    <macro name="arm_link" params="name">
        <link name="${name}">
            <visual>
                <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.15" length="0.8"/>
                </geometry>
                <material name="orange"/>
            </visual>

            <collision>
                <origin xyz="0.0 0.0 0.4" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.15" length="0.8"/>
                </geometry>
            
            </collision>
        </link>
    </macro>

    <macro name="arm_joint" params="name parent child axis">
        <joint name="${name}_joint" type="revolute">
            <origin xyz="0.0 0.0 0.7" rpy="0.0 0.0 0.0"/>
            <parent link="${parent}"/>
            <child link="${child}"/>
            <axis xyz="${axis}"/>
            <limit lower="-3.14" upper="3.14" effort="1000.0" velocity="0.5"/>
        </joint>
    </macro>
</robot>